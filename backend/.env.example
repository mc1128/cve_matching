# CVE Matching System Backend Environment Variables
# AWS Aurora PostgreSQL 연결 설정

# AWS Aurora PostgreSQL 데이터베이스 설정
DB_HOST=your-aurora-cluster-endpoint.cluster-xxxxxxxxx.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=cve_matching
DB_USER=postgres
DB_PASSWORD=your-secure-password

# 또는 전체 DATABASE_URL로 설정 (우선순위 높음)
# DATABASE_URL=postgresql://username:password@aurora-endpoint:5432/cve_matching

# AWS 설정 (Bedrock AI 등)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# FastAPI 설정
FASTAPI_ENV=development
SECRET_KEY=your-secret-key-for-jwt

# Redis 설정 (Celery용)
REDIS_URL=redis://localhost:6379/0

# 로깅 레벨
LOG_LEVEL=INFO

# CORS 설정
CORS_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.com"]

# API 키 (NVD API 등)
NVD_API_KEY=your-nvd-api-key
